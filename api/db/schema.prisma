model User {
  id    Int     @id @default(autoincrement())
  username String  @unique
  roles  String @default("user")
  manages Job[]

}

model Job {
  id    Int     @id @default(autoincrement())
  title String
  description String
  manager User @relation(fields: [managerId], references: [id])
  managerId Int
  max_signups Int
  minimum_age Int
}
